@page
@model Vitter.Pages.Profile.Me

@{
    ViewData["Title"] = "View profile";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <img class="img-fluid" src="@Model.UserInfo.PhotoUri"/>
            </div>
            <div class="col-9">
                <h1>@Model.UserInfo.Username</h1>
                <p>@Model.UserInfo.About</p>
                <a asp-page="/Post/New" class="btn btn-success">New post</a>
                <a asp-page="Edit" asp-route-id="@Model.UserInfo.UserId" class="btn btn-secondary">Edit profile</a>
            </div>
        </div>
    </div>
</div>
<hr/>
@foreach (var p in Model.Posts)
{
    <div class="card mt-3">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <img class="img-fluid" src="@p.PhotoUri"/>
                </div>
                <div class="col-10">
                    @Html.Raw(p.Content)
                </div>
            </div>
        </div>
        <div class="card-footer">
            By <a asp-page="/Profile/Index" asp-route-username="@p.Username">@@@p.Username</a> at @p.CreatedAt.ToString("yyyy-MM-dd hh:mm")
        </div>
    </div>
}